@page
@model Agencia_Bogota.Pages.RegistroPersonaModel
@{
    ViewData["Title"] = "Registro Persona";
    @using Microsoft.AspNetCore.Mvc.Rendering;
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<html>
<head>
    <title>Registro de Usuario</title>
</head>
<body>
    <h2>Registro de Usuario</h2>
    <form method="post" enctype="multipart/form-data">
        <div>
            <label for="identificacion">Documento de identidad:</label>
            <input type="text" id="identificacion" name="identificacion" required/>
        </div>
        <div>
            <label for="nombre">Nombre completo:</label>
            <input type="text" id="nombre" name="nombre" required/>
        </div>
        <div>
            <label for="direccion">Dirección:</label>
            <input type="text" id="direccion" name="direccion" required />
        </div>
        <div>
            <label for="telefono">Teléfono:</label>
            <input type="text" id="telefono" name="telefono" required />
        </div>
        <div>
            <label for="ciudad">Ciudad:</label>
            <select id="ciudad" name="ciudad" >
                <option disabled selected="" value="">Seleccione una ciudad</option>
                @foreach (var item in Model.Ciudades)
                {
                    <option> @item </option>
                }
            </select>
        </div>
        <div>
            <label for="pais">País:</label>
            <select id="pais" name="pais">
                <option disabled selected="" >Seleccione un país</option>
                @foreach (var item in Model.Paises)
                {
                    <option> @item </option>
                }
            </select>
        </div>
        <div>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email"  required>
        </div>
        <div>
            <label for="profesion">Profesión:</label>
            <input type="text" id="profesion" name="profesion" required>
        </div>
        <div>
            <label for="pdfFile">Hoja de vida en archivo PDF:</label>
            <input type="file" id="pdfFile" name="pdfFile" required>
        </div>
        <div>
            <label for="videoFile">Video de presentación en archivo de video:</label>
            <input type="file" id="videoFile" name="videoFile" required>
        </div>
        <button type="submit">Registrarse</button>
    </form>
</body>
</html>
