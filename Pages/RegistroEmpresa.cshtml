@page
@model Agencia_Bogota.Pages.RegistroEmpresaModel
@{
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<html>
<head>
    <title>Registro de Usuario</title>
</head>
<body>
    <h2>Registro de Empresa</h2>
    <form method="post" enctype="multipart/form-data">
        <div>
            <label for="NIT">NIT:</label>
            <input type="text" id="NIT" name="NIT" required />
        </div>
        <div>
            <label for="Razon">Razon Social:</label>
            <input type="text" id="Razon" name="Razon" required />
        </div>
        <div>
            <label for="Direcciones">Dirección:</label>
            <input type="text" id="Direcciones" name="Direcciones" required />
        </div>
        <div>
            <label for="Representante">Representante legal:</label>
            <input type="text" id="Representante" name="Representante" required />
        </div>
        <div>
            <label for="Telefonos">Teléfonos:</label>
            <input type="text" id="Telefonos" name="Telefonos" required />
        </div>
        <div>
            <label for="ciudad">Ciudad:</label>
            <select id="ciudad" name="ciudad">
                <option disabled selected="" value="">Seleccione una ciudad</option>
                @foreach (var item in Model.Ciudades)
                {
                    <option> @item </option>
                }
            </select>
        </div>
        <div>
            <label for="pais">País:</label>
            <select id="pais" name="pais">
                <option disabled selected="">Seleccione un país</option>
                @foreach (var item in Model.Paises)
                {
                    <option> @item </option>
                }
            </select>
        </div>
        <div>
            <label for="sede">Sede:</label>
            <select id="sede" name="sede">
                <option disabled selected="">Seleccione una sede</option>
                @foreach (var item in Model.Sedes)
                {
                <option> @item </option>
                }
            </select>
        </div>
        <div>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <button type="submit">Registrarse</button>
    </form>
</body>
</html>
